{
  "manifest_version": 2,
  "name": "Test",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png"
  },
  "content_scripts": [{
    "matches": ["http://dl.ndl.go.jp/*"],
    "css": ["overlay.css"]
  }],
  "background": {
    "scripts": ["popup.js"]
  },
  "permissions": [
    "tabs",
    "activeTab",
     "<all_urls>"
  ]
}
